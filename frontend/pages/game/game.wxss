.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 15px;
  box-sizing: border-box;
}

.status-bar {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  color: var(--primary-color);
}

.section-title {
  display: block;
  margin-bottom: 10px;
  font-size: 16px;
  color: #666;
}

.cards-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 5px;
  margin-bottom: 20px;
}

.landlord-cards {
  margin-bottom: 30px;
}

.player-cards {
  flex-grow: 1;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 20px;
}

.action-buttons button {
  flex: 1;
  max-width: 200px;
}